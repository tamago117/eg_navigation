<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find eg_navigation)/urdf/common.xacro"/>

  <xacro:macro name="gps_v0" params="parent *joint_origin">
	<joint name="gps_joint" type="fixed">
	  <xacro:insert_block name="joint_origin"/>
	  <parent link="${parent}"/>
	  <child link="gps_link"/>
	</joint>

	<link name="gps_link">
	  <visual>
		<geometry>
		  <mesh filename="package://eg_navigation/meshes/DAE/sensors/gps/gps.dae"/>
		</geometry>
	  </visual>
	  <collision>
		<geometry>
		  <mesh filename="package://eg_navigation/meshes/STL/sensors/gps/gps.stl"/>
		</geometry>
	  </collision>
	  <inertial>
		<xacro:cylinder_inertial mass="0.25" radius="0.065" length="0.055"/>
	  </inertial>
	</link>
  </xacro:macro>

</robot>
